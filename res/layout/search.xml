<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backcolor"
    android:orientation="vertical" >

     <RelativeLayout
         android:id="@+id/relativeLayout1"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:background="@color/headerc" >

        <ImageView
            android:id="@+id/headericon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/headericon"
         />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/headericon"
            android:text="@string/title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="serif" />

    </RelativeLayout>
      <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
         android:layout_marginTop="15dp"
        android:src="@drawable/cars_image" />
     <Spinner
        android:id="@+id/spinBrand"
         android:layout_width="250dp"
        android:layout_height="50dp" 
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
         android:background="@drawable/spinner"
        />

    <Spinner
        android:id="@+id/spinModel"
        android:layout_width="250dp"
        android:layout_height="50dp" 
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"

        
        />
     
     <LinearLayout 
     	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    <Button
        android:id="@+id/btnSearchHm"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:text="Search" 
        android:textColor="@color/white"
        android:background="@drawable/button_effects"/>

    <Button
        android:id="@+id/btnResetHm"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Reset"
                android:textColor="@color/white"
        android:background="@drawable/button_effects" />
    
    </LinearLayout>
   
     
     
     
     
     
     
     
</LinearLayout>